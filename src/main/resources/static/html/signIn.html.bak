<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">
        <title>账号管理系统</title>
        <link rel="shortcut icon" href="../images/icon.ico">
        <link rel="stylesheet" type="text/css" href="../assets/css/base.css">
        <link rel="stylesheet" type="text/css" href="../assets/lib/easyui/themes/default/easyui.css">
        <link rel="stylesheet" type="text/css" href="../assets/lib/easyui/themes/icon.css">
        <script type="text/javascript" src="../assets/lib/easyui/jquery.min.js"></script>
        <script type="text/javascript" src="../assets/lib/easyui/jquery.easyui.min.js"></script>
    </head>
    <body>
        <div style="width:30%;text-align:center;border: 1px black solid;border-radius:3px;margin:10% auto">
            <h2>欢迎登录账号管理系统</h2>
            <div style="margin: 40px 10%;text-align: left">
                <form id="signinForm" method="post">
                    <div>
                        <input id="userName" style="width:80%">
                    </div>
                    <div>
                        <input id="passWord" style="width:80%">
                    </div>
                </form>
            </div>
        </div>
        <script>
            $("#userName").textbox({
                iconCls: "icon-man",
                iconAlign: "right",
                label: "用户名:",
                labelPosition: "top",
                prompt: "请输入用户名"
            });
            $("#passWord").passwordbox({
                label: "密码:",
                labelPosition: "top",
                prompt: "请输入密码"
            });
        </script>
    </body>
</html>